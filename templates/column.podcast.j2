{% block styles %}
{% include "./_partials/webfonts.j2" %}
<link rel="stylesheet" href="{{ _static_url }}/base.css">
<link rel="stylesheet" href="{{ _static_url }}/column.css">
{% endblock %}

{% block scripts %}
<script src="{{ _static_url }}/app.js" type="module" async></script>
{% include "components/iconify-icon.j2" %}
{% endblock %}


{% block body %}
  <div id="navbar" class="z-30 fixed lg:sticky top-0 w-full">
    <div id="navbar-backdrop"></div>
    <div class="mx-auto max-w-content relative">
      {% include "./_layouts/components/nav-head.j2" %}
    </div>
  </div>
  <main id="main" class="max-w-content flex mx-auto pt-28 lg:pt-14 pb-16 lg:px-8">
    <div class="grow px-6 flex flex-col lg:flex-row gap-8">
      <section class="relative pb-12 mb-6 border-b lg:w-80 lg:pr-10 lg:border-none shrink">
        {% if podcast %}
          {% include "./_partials/podcast-info.j2" %}
        {% else %}
          <h1 class="text-4xl font-bold">{{ column.title }}</h1>
          {% if column.subtitle %}
            <h2 class="mt-2 text-lg text-gray-11">{{ column.subtitle }}</h2>
          {% endif %}
        {% endif %}
        <ul class="column-links flex lg:flex-col gap-2 mt-4 text-sm">
          <li><a href="{{ column.feed_url }}">
            <iconify-icon icon="simple-icons:rss"></iconify-icon>
            <span>RSS</span>
          </a></li>
          {% if podcast.apple_url %}
            <li><a href="{{ podcast.apple_url }}">
              <iconify-icon icon="simple-icons:applepodcasts"></iconify-icon>
              <span>Apple Podcast</span>
            </a></li>
          {% endif %}
          {% if podcast.spotify_url %}
            <li><a href="{{ podcast.spotify_url }}">
              <iconify-icon icon="simple-icons:spotify"></iconify-icon>
              <span>Spotify</span>
            </a></li>
          {% endif %}
          {% if podcast.castro_url %}
            <li><a href="{{ podcast.castro_url }}">
              <iconify-icon icon="simple-icons:castro"></iconify-icon>
              <span>Castro</span>
            </a></li>
          {% endif %}
          {% if podcast.pocketcasts_url %}
            <li><a href="{{ podcast.pocketcasts_url }}">
              <iconify-icon icon="simple-icons:pocketcasts"></iconify-icon>
              <span>Pocket Casts</span>
            </a></li>
          {% endif %}
          {% if podcast.xiaoyuzhou_url %}
            <li><a href="{{ podcast.xiaoyuzhou_url }}">
              <svg viewBox="0 0 30 30" width="1em" height="1em">
                <ellipse stroke="currentColor" stroke-width="2" fill="transparent" rx="4" ry="15" cx="14" cy="15" style="transform:rotate(52deg);transform-origin:50%;"></ellipse>
                <path fill="currentColor" d="M16.02 14.38c-2.63 2.04-5.21 3.79-7.47 5.11a9.89 9.89 0 004.63 1.15c5.46 0 9.88-4.43 9.88-9.91 0-.78-.09-1.54-.26-2.28-1.83 1.85-4.17 3.9-6.78 5.93zM3.31 10.73c0 1.09.17 2.14.5 3.12l.76 1.73c.2.36.42.7.66 1.03 2.3-1.23 5.21-3.14 8.27-5.51 3.04-2.35 5.61-4.69 7.37-6.6-.29-.36-.61-.7-.95-1.01l-1.49-1.16A9.873 9.873 0 0013.19.82c-5.46 0-9.88 4.44-9.88 9.91z" transform="rotate(-.774 346.995 -153.81)"></path>
              </svg>
              <span>小宇宙</span>
            </a></li>
          {% endif %}
          {% if podcast.external_links %}
            {% for item in podcast.external_links %}
              <li><a href="{{ item.link }}"{% if item.new_tab %} target="_blank"{% endif %}>
                {% if item.icon %}<iconify-icon icon="{{ item.icon }}"></iconify-icon>{% endif %}
                <span>{{ item.title }}</span>
              </a></li>
            {% endfor %}
          {% endif %}
        </ul>
      </section>
      <div class="flex flex-col grow gap-8">
        {% if pagination.items %}
          {% for note in pagination.items %}
            {% include "./_partials/audio-item.j2" %}
          {% endfor %}
        {% endif %}
        {% include "./_partials/navigation.j2" %}
      </div>
    </div>
  </main>
  {% include "./_layouts/footer.j2" %}
{% endblock %}
