{% block styles %}
{% include "./_partials/webfonts.j2" %}
<link rel="stylesheet" href="{{ _static_url }}/base.css">
<link rel="stylesheet" href="{{ _static_url }}/column.css">
{% endblock %}

{% block scripts %}
<script src="{{ _static_url }}/app.js" type="module"></script>
{% include "components/iconify-icon.j2" %}
{% endblock %}


{% block body %}
  <div id="navbar" class="z-30 fixed lg:sticky top-0 w-full">
    <div id="navbar-backdrop" class="absolute w-full h-full backdrop-blur border-b"></div>
    <div class="mx-auto max-w-content relative">
      {% include "./_layouts/components/nav-head.j2" %}
    </div>
  </div>
  <main id="main" class="flex max-w-6xl mx-auto pt-28 lg:pt-14 pb-10 lg:px-8">
    <div id="content-container" class="grow px-6 @container">
      <section class="relative min-w-0 shrink pt-8">
        <h1 class="text-4xl font-bold">{{ column.title }}</h1>
        {% if column.subtitle %}
          <h2 class="mt-2 text-lg text-gray-11">{{ column.subtitle }}</h2>
        {% endif %}
      </section>
      <div class="post-cards mt-10 js-masonry">
        {% if pagination.items %}
          {% for note in pagination.items %}
            {%- set grid_area = 7 -%}
            {%- if note.subtitle -%}
            {%- set grid_area = grid_area + 1 %}
            {%- endif -%}
            {%- if note.cover -%}
            {%- set grid_area = grid_area + 9 %}
            {%- endif -%}
            <a class="post-card" href="{{ note.url }}" style="grid-row-end: span {{ grid_area }}">
              {% if note.cover %}
                <div class="post-card-image">
                  <div class="js-cover" data-src="{{ note.cover|thumbnail }}"></div>
                </div>
              {% endif %}
              <div class="py-5 px-6">
                {% if note.tags %}
                  <div class="flex mb-3 gap-1.5 text-xs">
                    {% for tag in note.tags %}
                    <span class="py-0.5 px-1.5 bg-gray-a3 text-gray-a11 rounded font-medium">{{ tag.title }}</span>
                    {% endfor %}
                  </div>
                {% endif %}
                <div class="font-medium">{{ note.title }}</div>
                {% if note.subtitle %}
                  <div class="text-sm text-gray-11 mt-2">{{ note.subtitle }}</div>
                {% endif %}
              </div>
              <div class="mt-4 px-6 pb-6 text-xs text-gray-10">
                <time class="js-time" datetime="{{ note.published_at|xmldatetime }}">{{ note.published_at|dateformat('%b %d, %Y') }}</time>
              </div>
            </a>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </main>
  {% include "./_layouts/footer.j2" %}
{% endblock %}
