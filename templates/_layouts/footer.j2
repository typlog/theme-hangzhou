<div id="footer" class="bg-gray-2 border-t pt-10">
  <div class="px-4 md:px-8 xl:px-16 relative z-10 pb-4">
    <div class="flex flex-col md:flex-row md:justify-between gap-16">
      <div class="footer-logo shrink-0 flex items-center gap-4 md:flex-col md:items-start">
        {% if site.glyph_logo_light %}
          <span class="w-10 h-10 lg:w-16 lg:h-16 light-logo{% if not site.glyph_logo_dark %} dark-logo{% endif %}">
            <img class="rounded-md" width="64" height="64" src="{{ site.glyph_logo_light|thumbnail('ss') }}" loading="lazy" alt="{{ site.name }}"/>
          </span>
        {% endif %}
        {% if site.glyph_logo_dark %}
          <span class="w-10 h-10 lg:w-16 lg:h-16 dark-logo">
            <img class="rounded-md" width="64" height="64" src="{{ site.glyph_logo_dark|thumbnail('ss') }}" loading="lazy" alt="{{ site.name }}"/>
          </span>
        {% endif %}
        <strong class="text-2xl font-black md:hidden">{{ site.name }}</strong>
      </div>
      {% if theme_foot_links %}
        {%- set section_count = theme_foot_links|count -%}
        <div class="foot-links text-sm flex-1 gap-10 grid grid-cols-1
          {%- if section_count > 1%} sm:grid-cols-2{% endif %}
          {%- if section_count > 2 %} md:grid-cols-3{% endif %}
          {%- if section_count > 3 %} lg:grid-cols-4{% endif %}
          {%- if section_count == 1 %} max-w-60{% endif %}
          {%- if section_count == 2 %} max-w-[32rem]{% endif %}
          {%- if section_count == 3 %} max-w-[50rem]{% endif %}">

          {%- for section in theme_foot_links -%}
            <section class="section-links">
              <h1>{{ section.caption }}</h1>
              <ul>
                {%- for item in section.links -%}
                  <li><a href="{{ item.link }}" {% if item.new_tab  %} target="_blank"{% endif %}>{{ item.title }}</a></li>
                {%- endfor -%}
              </ul>
            </section>
          {%- endfor -%}
        </div>
      {% endif %}
    </div>
    <div class="flex items-center justify-between gap-8 pt-12">
      <div class="text-sm font-medium text-gray-10 site-copyright">
        {% if theme_copyright %}
        {{ theme_copyright|safe }}
        {% else %}
        &copy; {{ site.name }}
        {% endif %}
      </div>
      <div class="footer-socials">
        {% include "./components/social-icons.j2" %}
      </div>
    </div>
  </div>
  <div class="px-4 md:px-8 xl:px-16 text-xs text-gray-8 font-medium">
    <div class="py-4 border-t border-gray-a2">
      Powered by
      <a class="font-semibold hover:underline" href="https://typlog.com/?utm_source={{ site.slug }}&utm_medium=foot">Typlog</a>
    </div>
  </div>
</div>
