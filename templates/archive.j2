{% block styles %}
{% include "./_partials/webfonts.j2" %}
<link rel="stylesheet" href="{{ _static_url }}/base.css">
<link rel="stylesheet" href="{{ _static_url }}/column.css">
{% endblock %}

{% block scripts %}
<script src="{{ _static_url }}/app.js" type="module"></script>
{% include "components/iconify-icon.j2" %}
{% endblock %}


{% block body %}
  <div id="navbar" class="z-30 fixed lg:sticky top-0 w-full">
    <div id="navbar-backdrop"></div>
    <div class="mx-auto max-w-content relative">
      {% include "./_layouts/components/nav-head.j2" %}
    </div>
  </div>
  <main id="main" class="max-w-content flex mx-auto pt-28 lg:pt-14 pb-16 lg:px-8">
    <div class="grow px-6 flex flex-col lg:flex-row gap-4">
      <section class="relative pb-6 mb-6 border-b lg:w-80 lg:pr-10 lg:border-none shrink">
        {% if author %}
          <div class="flex lg:flex-col gap-6">
            {% if author.avatar %}
              <img src="{{ author.avatar|thumbnail('ss') }}" width="120" height="120" alt="{{ author.name }}">
            {% endif %}
            <div class="flex-grow">
              <h1 class="text-xl lg:text-2xl font-bold">{{ author.name }}</h1>
              {% if author.description %}
                <div class="column-description">
                  {{ author.description|markdown }}
                </div>
              {% endif %}
            </div>
          </div>
          <div class="flex items-center gap-4 mt-6">
            {% if author.metadata.x_url %}
              <a href="{{ author.metadata.x_url }}" aria-label="X (Twitter)">
                <iconify-icon icon="simple-icons:x"></iconify-icon>
              </a>
            {% endif %}
            {% if author.metadata.bluesky_url %}
              <a href="{{ author.metadata.bluesky_url }}" aria-label="BlueSky">
                <iconify-icon icon="simple-icons:bluesky"></iconify-icon>
              </a>
            {% endif %}
          </div>
        {% else %}
          <div class="pb-6">
            <h1 class="text-4xl font-bold">
              {%- if tag -%}
                <span class="text-gray-4 mr-1 select-none">#</span>
                {{ tag.title }}
              {%- else -%}
                {{ translate('archive') }}
              {%- endif -%}
            </h1>
          </div>
        {% endif %}
      </section>
      <div class="flex flex-col grow gap-8">
        {% if pagination.items %}
          {% for note in pagination.items %}
            {% if note.type == 'audio' and note.audio %}
              {% include "./_partials/audio-item.j2" %}
            {% else %}
              {% include "./_partials/post-item.j2" %}
            {% endif %}
          {% endfor %}
        {% endif %}
        {% include "./_partials/navigation.j2" %}
      </div>
    </div>
  </main>
  {% include "./_layouts/footer.j2" %}
{% endblock %}
