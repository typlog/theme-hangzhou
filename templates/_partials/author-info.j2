<div class="flex lg:flex-col gap-6">
  {% if author.avatar %}
    <img src="{{ author.avatar|thumbnail('ss') }}" width="120" height="120" alt="{{ author.name }}">
  {% endif %}
  <div class="flex-grow">
    <h1 class="text-xl lg:text-2xl font-bold">{{ author.name }}</h1>
    {% if author.description %}
      <div class="archive-description">
        {{ author.description|markdown }}
      </div>
    {% endif %}
  </div>
</div>
<div class="flex items-center gap-4 mt-6">
  {% if author.metadata.x_url %}
    <a href="{{ author.metadata.x_url }}" aria-label="X (Twitter)">
      <iconify-icon icon="simple-icons:x"></iconify-icon>
    </a>
  {% endif %}
  {% if author.metadata.bluesky_url %}
    <a href="{{ author.metadata.bluesky_url }}" aria-label="BlueSky">
      <iconify-icon icon="simple-icons:bluesky"></iconify-icon>
    </a>
  {% endif %}
</div>
